<div class="container">
  <h1>RIG LIBRARY</h1>

  <p class="plain-text">Click a rig to see a map of its layout</p>
  <ul>
    <% @rigs.each do |r| %>
      <li class="list-spaced"><%= link_to r.name, rig_path(r.id), :class => "plain-text" %></li>
      <%#
        Note: Different rig_path arg before decommissioning the db
        rig_path(r)
      %>
    <% end %>
  </ul>
</div>
