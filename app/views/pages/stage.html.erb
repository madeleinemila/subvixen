<div class="stage-container">

  <div class="stage-main">
    <h2>STAGE</h2>
    <div class="controls stage-bonus-controls">
      <div class="flex-2 plain-text info-text">Click below to add fixtures</div>
      <button class="flex-1 button-med lowlight-hover" id="sym-h">MIRROR H</button>
      <button class="flex-1 button-med lowlight-hover" id="sym-v">MIRROR V</button>
    </div>
    <video id="stage-video" muted crossOrigin="anonymous" playsinline>
      <source src="<%= @video.transform_sml_url %>">
    </video>
    <canvas id="stage-canvas"></canvas>
    <div class="video-controls">
        <button class="transport" id="play">PLAY</button>
        <button class="transport" id="pause">PAUSE</button>
        <button class="transport" id="loop">LOOP</button>
    </div>
    <button class="button-lge" id="generate">Generate</button>
    <canvas id="sim-canvas"></canvas>


    <h2>FIXTURES</h2>
    <div class="controls">
      <button class="flex-1 button-med" id="f-overlay">Show overlay</button>
      <button class="flex-1 button-med" id="f-sort">Sort list by #</button>
    </div>
    <div id="fixtures-main">
    </div>
  </div>


  <div class="code-main">
    <h2>CODE</h2>

    <div class="code-controls controls">
      <button class="flex-1 copy button-med highlight-hover">Copy to clipboard</button>
      <div class="flex-1 copy-notice"></div>
    </div>

    <div class="code-display" id="lut">

    </div>
  </div>

</div>
